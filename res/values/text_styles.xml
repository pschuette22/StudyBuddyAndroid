<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="viewpager_title_text">
        <item name="android:textSize">24sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">2</item>
    </style>
    
    <style name="blue_button_text">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="blue_button_textsm">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="titles_text_inb">
        <item name="android:textColor">#fff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:textSize">25sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="titles_text_inw">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="default_text">
        <item name="android:textColor">#44F</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="splash_text_title">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="splash_screen_text">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:typeface">sans</item>        
    </style>

</resources>