<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true"><shape>
            <size android:height="40sp" />

            <stroke android:width="1dp" android:color="#999" />

            <corners android:radius="8dp" />

            <gradient android:endColor="#00F" android:startColor="#00F" />

            <corners android:radius="8dp" />
        </shape></item>

    <!-- focused -->
    <item android:state_focused="true"><shape>
            <size android:height="40sp" />

            <stroke android:width="1dp" android:color="#999" />

            <corners android:radius="8dp" />

            <gradient android:endColor="#007FFF" android:startColor="#FFF" />

            <corners android:radius="8dp" />
        </shape></item>

    <!-- default -->
    <item><shape>
            <size android:height="40sp" />

            <gradient android:angle="270" android:endColor="#005999" android:startColor="#007FFF" />

            <stroke android:width="1dp" android:color="#999" />

            <corners android:radius="8dp" />
        </shape></item>

</selector>