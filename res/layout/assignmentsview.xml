<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutrandom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#999"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="2dp"
        android:background="#fff"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <Button
                    android:id="@+id/buttonAssignments_Add"
                    style="@style/blue_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="30"
                    android:background="@drawable/blue_button_layoutlg"
                    android:padding="3dp"
                    android:text="@string/AddDelete" />

                <Button
                    android:id="@+id/buttonAssignments_ViewSettings"
                    style="@style/blue_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="30"
                    android:background="@drawable/blue_button_layoutlg"
                    android:padding="3dp"
                    android:text="@string/buttonAssignmentView_Settings" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textAssignments_Title"
                    style="@style/blue_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="3dp"
                    android:background="@drawable/list_titlebar_bgrnd"
                    android:paddingLeft="20dp" />

                <LinearLayout
                    android:id="@+id/assignments_List"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:divider="@drawable/listdivider"
                    android:orientation="vertical" >
                </LinearLayout>

                <TextView
                    android:id="@+id/textEvents_Title"
                    style="@style/blue_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="3dp"
                    android:background="@drawable/list_titlebar_bgrnd"
                    android:paddingLeft="20dp" />

                <LinearLayout
                    android:id="@+id/events_List"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:background="#000"
                    android:orientation="vertical" >
                </LinearLayout>

                <TextView
                    android:id="@+id/textReminders_Title"
                    style="@style/blue_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="3dp"
                    android:background="@drawable/list_titlebar_bgrnd"
                    android:paddingLeft="20dp" />

                <LinearLayout
                    android:id="@+id/reminders_List"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>