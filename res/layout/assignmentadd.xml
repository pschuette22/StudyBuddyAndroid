<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/titles" >

            <TextView
                android:id="@+id/textAssignmentAdd_Title"
                style="@style/titles_text_inb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="5dp"
                android:text="@string/textAssignmentAdd_Title" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonAssignmentAdd_AddQuit"
            style="@style/blue_button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/blue_button_layoutlg"
            android:text="@string/buttonAssignmentAdd_SaveQuit" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#989898"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#fff"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textAssignmentAdd_Assignments"
                    style="@style/titles_text_inw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/textAssignmentAdd_Assignment" />

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp" >

                    <Spinner
                        android:id="@+id/spinnerAssignmentAdd_ClassA"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="35" />

                    <EditText
                        android:id="@+id/editTextAssignmentAdd_Assignment"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="1dp"
                        android:layout_weight="30"
                        android:background="@drawable/edit_text"
                        android:hint="@string/hintAssignmentAdd_Assignment"
                        android:maxLines="4"
                        android:padding="2dp"
                        android:paddingLeft="2dp" />

                    <Button
                        android:id="@+id/button1AssignmentAdd_AssignmentDate"
                        style="@style/blue_button_textsm"
                        android:layout_width="fill_parent"
                        android:layout_height="40sp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="35"
                        android:background="@drawable/blue_button_layoutsm"
                        android:gravity="center"
                        android:paddingRight="1dp"
                        android:text="@string/buttonAssignmentAdd_AssignmentTime" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonAssignmentAdd_AddAssignment"
                    style="@style/blue_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/blue_button_layoutlg"
                    android:text="@string/buttonAssignmentAdd_AddAssignment" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="#989898"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingBottom="3dp" >

                <TextView
                    android:id="@+id/textAssignmentAdd_EventTest"
                    style="@style/titles_text_inw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="@string/textAssignmentAdd_EventTest" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Spinner
                        android:id="@+id/spinnerAssignmentAdd_ClassE"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="35" />

                    <EditText
                        android:id="@+id/editTextAssignmentAdd_EventTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="1dp"
                        android:layout_weight="30"
                        android:background="@drawable/edit_text"
                        android:hint="@string/hintAssignmentAdd_EventTitle"
                        android:maxLines="4"
                        android:padding="2dp"
                        android:paddingLeft="2dp" />

                    <Button
                        android:id="@+id/buttonAssignmentAdd_EventDate"
                        style="@style/blue_button_textsm"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="35"
                        android:background="@drawable/blue_button_layoutsm"
                        android:text="@string/buttonAssignmentAdd_EventDate" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonAssignmentAdd_SaveEvent"
                    style="@style/blue_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/blue_button_layoutlg"
                    android:text="@string/buttonAssignmentAdd_AddEvent" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#989898"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingBottom="3dp" >

                <TextView
                    android:id="@+id/textAssignmentAdd_Reminders"
                    style="@style/titles_text_inw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="@string/textAssignmentAdd_Reminders" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Spinner
                        android:id="@+id/spinnerAssignmentAdd_ClassR"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="35" />

                    <EditText
                        android:id="@+id/editTextAssignmentAdd_Reminder"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="1dp"
                        android:layout_weight="30"
                        android:background="@drawable/edit_text"
                        android:hint="@string/editTextAssignmentAdd_Reminder"
                        android:maxLines="4"
                        android:padding="2dp"
                        android:paddingLeft="2dp" />

                    <Button
                        android:id="@+id/buttonAssignmentAdd_RemindDate"
                        style="@style/blue_button_textsm"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="35"
                        android:background="@drawable/blue_button_layoutsm"
                        android:text="@string/buttonAssignmentAdd_ReminderDate" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonAssignmentAdd_SaveReminder"
                    style="@style/blue_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="30"
                    android:background="@drawable/blue_button_layoutlg"
                    android:text="@string/buttonAssignmentAdd_ReminderAdd" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>