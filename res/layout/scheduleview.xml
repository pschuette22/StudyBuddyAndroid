<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#999"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="2dp"
        android:background="#fff"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="#FFF"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <Button
                    android:id="@+id/buttonScheduleView_ToScheduleEdit"
                    style="@style/blue_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="30"
                    android:background="@drawable/blue_button_layoutlg"
                    android:padding="3dp"
                    android:text="@string/AddDelete" />

                <Button
                    android:id="@+id/buttonSchedule_DeleteClasses"
                    style="@style/blue_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="30"
                    android:background="@drawable/blue_button_layoutlg"
                    android:padding="3dp"
                    android:text="@string/HolidayPickerTitle" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewScheduleView_Monday"
                    style="@style/blue_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/list_titlebar_bgrnd"
                    android:text="@string/textScheduleEdit_Monday"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:id="@+id/textViewSchedule_MondaySchedule"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/textViewScheduleView_Tuesday"
                    style="@style/blue_button_text"
                    android:layout_width="fill_parent"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:background="@drawable/list_titlebar_bgrnd"
                    android:text="@string/textScheduleView_Tuesday"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:id="@+id/textViewSchedule_TuesdaySchedule"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/textViewScheduleView_Wednesday"
                    style="@style/blue_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/list_titlebar_bgrnd"
                    android:text="@string/textScheduleView_Wednesday"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:id="@+id/textViewSchedule_WednesdaySchedule"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/textViewScheduleView_Thursday"
                    style="@style/blue_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/list_titlebar_bgrnd"
                    android:text="@string/textScheduleView_Thursday"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:id="@+id/textViewSchedule_ThursdaySchedule"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/textViewScheduleEdit_Friday"
                    style="@style/blue_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/list_titlebar_bgrnd"
                    android:text="@string/textScheduleView_Friday"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:id="@+id/textViewSchedule_FridaySchedule"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/textViewScheduleView_Saturday"
                    style="@style/blue_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/list_titlebar_bgrnd"
                    android:text="@string/textScheduleView_Saturday"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:id="@+id/textViewSchedule_SaturdaySchedule"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/textViewScheduleView_Sunday"
                    style="@style/blue_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/list_titlebar_bgrnd"
                    android:text="@string/textScheduleView_Sunday"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:id="@+id/textViewSchedule_SundaySchedule"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:orientation="vertical" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>